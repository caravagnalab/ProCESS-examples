nextflow.enable.dsl=2

// Singularity configuration
singularity {
    enabled      = true
    envWhitelist = ['SINGULARITY_TMPDIR']
    runOptions   = '--bind /orfeo:/orfeo --contain --workdir ${SINGULARITY_TMPDIR} --writable-tmpfs'
    cacheDir = "/orfeo/cephfs/scratch/cdslab/shared/containers/singularity/sarek_tumourevo"
}

// Workflow-level settings
workflow {
    cleanup = true
}

process {
    // Slurm executor defaults
    executor      = 'slurm'
    queue         = 'EPYC'
    account       = 'cdslab'

    // Default resource allocation
    cpus          = 4
    memory        = 10.GB
    time          = 6.h

    // Hard resource limits
    resourceLimits = [
        memory: 512.GB,
        cpus: 128,
        time: 120.h
    ]

    // Retry strategy
    errorStrategy = 'retry'
    maxRetries    = 3

    // Prolog/Epilog scripts
    beforeScript  = "source /orfeo/cephfs/fast/cdslab/${USER}/prolog.sh"
    afterScript   = "source /orfeo/cephfs/fast/cdslab/${USER}/epilog.sh"

    // Per-process overrides
    withName: 'GATK4_MARKDUPLICATES|GATK4_MARKDUPLICATESSPARK' {
        cpus   = { 24 * task.attempt }
        memory = { 200.GB * task.attempt }
        time   = { 24.h * task.attempt }
    }
    withName: 'STRELKA_SOMATIC|MUTECT2_PAIRED' {
        cpus   = { 24 * task.attempt }
        memory = { 128.GB * task.attempt }
        time   = { 48.h * task.attempt }
    }
    withName: 'CNVKIT_BATCH' {
        cpus = { 12 * task.attempt }
    }
    withName: 'MERGE_CRAM|SAMTOOLS_STATS' {
        cpus = { 8 * task.attempt }
    }
    withName: 'GATK4_APPLYBQSR' {
        time = { 6.h * task.attempt }
    }
}

// Executor-level tuning
executor {
    queueSize       = 40
    submitRateLimit = '1sec'
    pollInterval    = '1s'
}

// Pipeline parameters
params {
    // Sarek-specific
    igenomes_base = "/orfeo/LTS/CDSLab/LT_storage/tmp_references"
    aligner       = "bwa-mem2"
    genome        = "GATK.GRCh38"

    // TumourEvo parameters
    drivers_table = "https://raw.githubusercontent.com/nicola-calonaci/test-datasets/evoverse/data/DRIVER_ANNOTATION/ANNOTATE_DRIVER/Compendium_Cancer_Genes.tsv"
}

// Plugins
plugins {
    id 'nf-validation'
}
